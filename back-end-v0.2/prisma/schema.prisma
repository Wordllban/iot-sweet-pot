generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String
  lastName  String

  pots Pot[]

  @@map("users")
}

model Pot {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User @relation(fields: [ownerId], references: [id])
  ownerId Int

  temperature Temperature[]
  humidity    Humidity[]
  moisture    Moisture[]

  @@map("pots")
}

model Temperature {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  value Int

  pot   Pot @relation(fields: [potId], references: [id])
  potId Int
}

model Humidity {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  value Int

  pot   Pot @relation(fields: [potId], references: [id])
  potId Int
}

model Moisture {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  value Int

  pot   Pot @relation(fields: [potId], references: [id])
  potId Int
}
